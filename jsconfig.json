{
  "compilerOptions": {
    "allowJs": true,
    "target": "ES6",
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["src/**/*", "*.js", "*.jsx"],
  "exclude": ["node_modules"]
}